<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status_list"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/layout_margin_main"
        android:drawablePadding="2dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background="@android:color/transparent"
        android:fontFamily="@font/advent_pro_light"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/location_list"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/layout_margin_main"
        android:drawablePadding="2dp"
        android:background="@android:color/transparent"
        android:descendantFocusability="blocksDescendants"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableStart="@drawable/ic_location_on_black_18dp"
        android:textColor="#5692F5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/phone_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@android:color/transparent"
        android:layout_margin="5dp"
        android:singleLine="true"
        android:textSize="13sp"
        android:drawableStart="@drawable/ic_call_black_18dp"/>

    <View
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="#5d5d5d" />

</LinearLayout>